# Linear-Jira Sync User Configuration
#
# This is an example configuration file for user-specific settings.
# Copy this file to: ~/.linear-jira-sync/config.properties
#
# mkdir -p ~/.linear-jira-sync
# cp config.properties.example ~/.linear-jira-sync/config.properties
# chmod 600 ~/.linear-jira-sync/config.properties  # Restrict permissions
#
# This configuration will be used across all Linear-Jira sync projects
# for the current user. Environment variables will still override these settings.

# Linear API Configuration
linear.api.token=lin_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Jira API Configuration
jira.api.url=https://your-domain.atlassian.net
jira.api.username=your-email@example.com
jira.api.token=your_jira_api_token_here

# Default Jira Project (can be overridden per-project)
jira.project.key=PROJ

# Optional: Customize issue type (default: Task)
#jira.issue.type=Story

# Optional: Custom field ID for Linear issue tracking
#jira.custom-field.linear-id=customfield_10001

# Optional: Enable priority field mapping (default: false)
#jira.enable-priority=true

# Optional: Sync configuration defaults
#sync.dry-run=false
#sync.batch-size=50

# Optional: Attachment configuration
#attachment.sync.enabled=true
#attachment.download.timeout=30
#attachment.download.max-size=10485760
